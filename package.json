{
  "name": "lyrics-notes-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "npm run start --workspace=@lyrics-notes/mobile",
    "start:dev": "npm run dev",
    "firebase:emulator": "npm run emulator --workspace=@lyrics-notes/firebase",
    "dev:all": "concurrently -k -n expo,firebase \"npm run start --workspace=@lyrics-notes/mobile\" \"npm run emulator --workspace=@lyrics-notes/firebase\"",
    "build:ios:dev": "npm run build:ios:dev --workspace=@lyrics-notes/mobile",
    "build:ios:prod": "npm run build:ios:prod --workspace=@lyrics-notes/mobile",
    "lint": "npm run lint --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present"
  },
  "devDependencies": {
    "concurrently": "^9.0.1",
    "supabase": "^2.70.5",
    "typescript": "~5.9.2"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.15"
  }
}
